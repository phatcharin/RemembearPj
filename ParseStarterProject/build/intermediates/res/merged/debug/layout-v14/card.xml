<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:contentPadding="8dp"
    app:cardUseCompatPadding="true"
    android:background="#000000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clickable="false"
        android:weightSum="1"
        android:background="#000000"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivImg"
            android:layout_gravity="center_horizontal"
            android:src="@android:drawable/sym_def_app_icon"
            android:paddingTop="0.2dp"
            android:paddingBottom="0.2dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/tvName"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20dp"
            android:textIsSelectable="false"
            android:background="#90e8f0f1"
            android:capitalize="words"
            android:autoText="false"
            android:layout_below="@+id/ivImg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView><!-- From: file:/E:/RemembearPJ/RemembearPj/ParseStarterProject/src/main/res/layout-v14/card.xml -->
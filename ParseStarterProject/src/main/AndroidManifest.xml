<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.parse.starter" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Cards.StarterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyAppTheme" >
        <meta-data
            android:name="com.parse.APPLICATION_ID"
            android:value="@string/parse_app_id" />
        <meta-data
            android:name="com.parse.CLIENT_KEY"
            android:value="@string/parse_client_key" />

        <activity
            android:name=".Cards.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Cards.GameHomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Cards.AddCardSetActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Cards.AddCardActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Cards.ShowCardActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Game.ChooseGames"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Game.GameAnswer"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Game.GameMatching"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Game.GameTrueOrFalse"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Game.ShowScore"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
